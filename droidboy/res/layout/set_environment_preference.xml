<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/set_environment_override_api_key"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/set_environment_override_api_key_hint"
        android:inputType="text" />
    <EditText
        android:id="@+id/set_environment_override_endpoint_url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/set_environment_override_endpoint_url_hint"
        android:inputType="textUri" />
</LinearLayout>